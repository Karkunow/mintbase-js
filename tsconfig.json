{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitThis": false,
    "module": "commonjs",
    "target": "es5",
    "types": [],
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "buffer": ["./buffer-override.d.ts"]
    },
    "skipDefaultLibCheck": false
  }
}
